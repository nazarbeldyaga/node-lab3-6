<header class="header">
    <div class="header__logo">
        <span class="logo"></span>
        <h1>Прогноз погоди</h1>
    </div>

    <nav class="header__nav">
        <a href="/" class="nav__link">Головна</a></li>
        <a href="/calendar" class="nav__link">Календар</a>
        <a href="/pagination?page=1&limit=3&locationId=1" class="nav__link">3 дні</a>
        <a href="/pagination?page=1&limit=7&locationId=1" class="nav__link">7 днів</a>
        <% if (locals.user && locals.user.role === 'admin') { %>
            <a href="/admin" class="nav__link">Адмін панель</a>
        <% } %>
    </nav>

    <div class="header__user">
        <% if (locals.user) { %>
            <span>Вітаємо, <%= user.username %>!</span>
            <a href="/auth/logout" class="user__logout-button">Вийти</a>
        <% } else { %>
            <a href="/auth/login" class="user__login-button">Увійти</a>
        <% } %>
    </div>
</header>